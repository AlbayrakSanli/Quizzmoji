
<div class="row mt-5">
  <div class="col-md-6 offset-md-3 shadow-lg bg-white rounded py-3">
    <h2 class="text-center">S'inscrire</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Mot de passe #{@minimum_password_length} caractÃ¨res minimum" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "Confirmez votre mot de passe" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Inscription", class:"btn btn-info" %>
      </div>
    <% end %>

<div class="text-center mt-2">
  <%= render "devise/shared/links" %>
</div>


  </div>
</div>
